<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="50dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="This is a demonstration of the live chat feature which you can add to your app. \n\nFor more details visit https://github.com/appsroxcom/LiveChatKit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_bg"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:onClick="startLiveChat"
        android:text="Chat with us!"/>

</androidx.constraintlayout.widget.ConstraintLayout>